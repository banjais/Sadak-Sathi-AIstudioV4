name: Deploy Sadak-Sathi App

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Checkout repository
      - name: Checkout code
        uses: actions/checkout@v3

      # 2️⃣ Setup Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 20

      # 3️⃣ Install Firebase CLI
      - name: Install Firebase CLI
        run: npm install -g firebase-tools

      # 4️⃣ Authenticate Firebase using Service Account JSON
      - name: Authenticate Firebase
        env:
          FIREBASE_SERVICE_ACCOUNT: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
        run: |
          echo "$FIREBASE_SERVICE_ACCOUNT" > ${GITHUB_WORKSPACE}/service-account.json
          firebase login:ci --token "$(firebase login:ci --no-localhost --project $(firebase projects:list --json | jq -r '.results[] | select(.projectId=="sadak-sathi-3ab73") | .projectId'))" || true
          firebase use --add sadak-sathi-3ab73
          export GOOGLE_APPLICATION_CREDENTIALS="${GITHUB_WORKSPACE}/service-account.json"

      # 5️⃣ Install dependencies for functions
      - name: Install Functions Dependencies
        working-directory: functions
        run: npm install

      # 6️⃣ Build Frontend
      - name: Install Frontend Dependencies
        run: npm install
      - name: Build Frontend
        run: npm run build

      # 7️⃣ Deploy Frontend to Firebase Hosting
      - name: Deploy Frontend
        run: firebase deploy --only hosting

      # 8️⃣ Deploy Firebase Functions
      - name: Deploy Functions
        run: firebase deploy --only functions
